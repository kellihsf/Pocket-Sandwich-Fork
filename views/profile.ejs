    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
    crossorigin="anonymous"
  />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Shadows Into Light|Radio Canada">
    <title>Profile Page</title>
</head>
<body><center>
    <h1>My Profile Page</h1>
            <br>
    <h5 style= "color: rgb(66, 14, 14)">User email: <%= user.email %></h5>

    <form method="post" action="/profile/<%= user.id %>/edit">
      <input type="text" id="myName" placeholder="First Name">
      <br>
      <input type="text" id="myName" placeholder="Last Name">
      <br>
      <input type="email" id="email" name="email" placeholder="Email address">
      <br>
      <br>
      <button id="submit">Save</button>
    </form>
    <br>
    <a href="/restaurants">
      <button>Search for Restaurants</button>
    </a>
    <a href="/"><br><br>
      <button>Logout</button>
    </a></center>
    <style>
  h1 {font-family: 'Shadows Into Light'}
  body {
    background: rgb(51,225,227);
    background: radial-gradient(circle, rgba(51,225,227,1) 0%, rgb(232 253 150) 100%);}
    </style>
    
</body>
</html>